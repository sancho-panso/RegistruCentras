@model IEnumerable<RegistruCentras.Domains.RequestForInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResponseInfo.Answer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResponseInfo.Answer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Answer</a> |
            </td>
        </tr>
}
    </tbody>
</table>
